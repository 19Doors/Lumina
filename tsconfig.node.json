{
  "compilerOptions": {
    "target": "ES2020",              // Set to the Node version you support
    "module": "commonjs",            // CommonJS is the standard for Node.js
    "outDir": "./dist",              // Output directory for compiled files
    "rootDir": "./src",              // Root directory of your source files
    "strict": true,                  // Enable all strict type-checking options
    "esModuleInterop": true,         // Better compatibility with CommonJS modules
    "skipLibCheck": true,            // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure file name consistency
    "resolveJsonModule": true,       // Allow importing JSON files
    "moduleResolution": "node"       // Use Node.js module resolution
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
